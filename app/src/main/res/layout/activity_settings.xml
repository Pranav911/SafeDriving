<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#EEE"
    tools:context="com.nitinshakya.safedriving.MainActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Speed Limit"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"/>
    <View
        android:background="#737373"
        android:layout_below="@id/tv1"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:layout_below="@+id/tv1"
        android:layout_width="match_parent"
       android:padding="5dp"

        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">
        <TextView
            android:layout_marginBottom="8dp"
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed 50 Km/hr"
            android:textStyle="bold"
            android:textSize="18dp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_marginBottom="8dp"

            android:layout_below="@id/tv2"
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed 60 Km/hr"
            android:textStyle="bold"
            android:textSize="18dp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv3"
            android:layout_alignParentEnd="true" />
        <TextView

            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed 70 Km/hr"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_below="@+id/tv3"
            android:layout_alignParentStart="true" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv4"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <View
        android:background="#737373"

        android:layout_below="@id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do Not Disturb Mode"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginBottom="5dp"
        android:layout_alignParentStart="true" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv6"
        android:layout_alignParentEnd="true" />
    <View
        android:background="#737373"
        android:layout_below="@id/tv6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />


</RelativeLayout>
